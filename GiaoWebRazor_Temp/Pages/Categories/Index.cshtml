@page
@model GiaoBookWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>CATEGORY LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-page="/categories/create"><i class="bi bi-plus-circle"></i> Add a new category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>

        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder)){
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td class="text-center">
                    <div class="w-75 btn-group " role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    
    </table>
</div>