@model List<Product>
<div class="card shadow border-0 mt-2">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">PRODUCT LIST</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
<div class="container">
    <div class="row pb-3">
        <div class="col-6">
            @*<h2>CATEGORY LIST</h2>*@
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle"></i> Add a new product</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>

        @foreach(var obj in Model){
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Author</td>
                <td></td>

                <td class="text-center">
                    <div class="w-75 btn-group " role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    
    </table>
</div>
    </div>
